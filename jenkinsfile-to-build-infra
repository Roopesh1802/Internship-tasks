pipeline { 
    agent any
     stages {
         stage('checkout') {
            steps{
                checkout scmGit(branches: [[name: '*/main']], extensions: [], userRemoteConfigs: [[url: 'https://github.com/Roopesh1802/Internship-tasks']])
            }
         }
         
         stage('terraform init') {
             steps { 
                sh 'terraform init'
                }
                
            }
         stage('terraform plan') {
             steps { 
                sh 'terraform plan'
                }
                
            }   
         stage('gcloud authenticate & terraform apply') {
             steps {
                sh 'gcloud compute instances create NAME --scopes=https://www.googleapis.com/auth/cloud-platform'
                sh 'terraform apply --auto-approve'
                }
                
            }   
        }
         post { 
            success { 
                echo "Build is successfull" 
            } 
            failure { 
                echo "Build failed" 
            }
        }
    }
